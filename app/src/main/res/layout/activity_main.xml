<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <com.uiLibrary.bobbleLibrary.BobbleButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/vishesh" />

    <com.uiLibrary.bobbleLibrary.BobbleImage
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/add_cam" />

    <com.uiLibrary.bobbleLibrary.BobbleFab
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        app:backgroundTint="@color/black"
        app:borderWidth="2dp"
        app:fabSize="normal" />

    <com.uiLibrary.bobbleLibrary.BobbleCardView
        android:id="@+id/card"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:focusable="true" />

    <com.uiLibrary.bobbleLibrary.BobbleRoundCornerEditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/type_your_message_here"
        android:padding="16dp"
        android:textSize="12sp"
        android:typeface="serif"
        app:corner_radius="30dp" />

    <com.uiLibrary.bobbleLibrary.BobbleImageButton
        android:id="@+id/imgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_cam"/>

</LinearLayout>
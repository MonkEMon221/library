<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="customTheme" format="string" />
    <attr name="corner_radius" format="dimension" />
    <attr name="borderColor" format="color|reference" />
    <attr name="backgroundColor" format="reference|color"/>

    <declare-styleable name="BobbleButton">
        <attr name="customTheme" />
        <attr name="backgroundTint" />
        <attr name="cornerRadius" />
        <attr name="android:textColor" />
        <attr name="android:paddingTop" format="dimension" />
        <attr name="android:paddingBottom" format="dimension" />
        <attr name="android:paddingLeft" format="dimension" />
        <attr name="android:paddingRight" format="dimension" />
        <attr name="android:padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BobbleFab">
        <attr name="backgroundTint" />
        <attr name="maxImageSize" format="dimension" />
        <attr name="fabCustomSize" format="dimension" />
        <attr name="android:src"/>
        <attr name="customTheme" />
    </declare-styleable>

    <declare-styleable name="BobbleCardView">
        <attr name="cardCornerRadius" format="dimension" />
        <attr name="cardBackgroundColor" format="color" />
        <attr name="customTheme" />
    </declare-styleable>

    <declare-styleable name="BobbleEditText">
        <attr name="corner_radius" />
        <attr name="textBoxColor" format="color" />
        <attr name="borderColor" />
        <attr name="android:textColor" />
        <attr name="borderWidth" />
        <attr name="customTheme" />

        <attr name="android:paddingTop" format="dimension" />
        <attr name="android:paddingBottom" format="dimension" />
        <attr name="android:paddingLeft" format="dimension" />
        <attr name="android:paddingRight" format="dimension" />
        <attr name="android:padding" format="dimension" />

    </declare-styleable>

    <declare-styleable name="BobbleImageButton">
        <attr name="customTheme" />
        <attr name="android:backgroundTint" />
    </declare-styleable>

    <declare-styleable name="BobbleTabLayout">
        <attr name="customTheme" />
        <attr name="tabTextColor" format="color" />
        <attr name="tabSelectedTextColor" format="color" />
        <attr name="tabIndicatorColor" format="color" />
        <attr name="indicatorHeight" format="dimension"/>
        <attr name="tabIndicatorRadius" format="dimension"/>
        <attr name="tabIndicatorMargin" format="dimension"/>
        <attr name="boldText" format="boolean" />
        <attr name="android:textSize" format="dimension" />
        <attr name="selectedTabBoldText" format="boolean" />
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="BobbleImage">
        <attr name="backgroundColor" />
        <attr name="android:paddingTop" format="dimension" />
        <attr name="android:paddingBottom" format="dimension" />
        <attr name="android:paddingLeft" format="dimension" />
        <attr name="android:paddingRight" format="dimension" />
        <attr name="android:padding" format="dimension" />
        <attr name="customTheme" />

        <attr name="imageColorPrimary" format="color" />
        <attr name="enableColorFilterPrimary" format="boolean" />
        <attr name="srcPrimary" format="color|reference" />
        <attr name="marginImagePrimary" format="dimension" />
        <attr name="marginTopImagePrimary" format="dimension" />
        <attr name="marginBottomImagePrimary" format="dimension" />
        <attr name="marginLeftImagePrimary" format="dimension" />
        <attr name="marginRightImagePrimary" format="dimension" />
        <attr name="translationZImagePrimary" format="dimension" />
        <attr name="gravityImagePrimary" format="string" />
        <attr name="scaleTypePrimary" format="enum">
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>

        <attr name="imageColorSecondary" format="color" />
        <attr name="enableColorFilterSecondary" format="boolean" />
        <attr name="srcSecondary" format="color|reference" />
        <attr name="marginImageSecondary" format="dimension" />
        <attr name="marginTopImageSecondary" format="dimension" />
        <attr name="marginBottomImageSecondary" format="dimension" />
        <attr name="marginLeftImageSecondary" format="dimension" />
        <attr name="marginRightImageSecondary" format="dimension" />
        <attr name="translationZImageSecondary" format="dimension" />
        <attr name="gravityImageSecondary" format="string"/>
        <attr name="scaleTypeSecondary" format="enum">
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BobbleCircleImageView">
        <attr name="backgroundColor"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderColor"/>
    </declare-styleable>

    <declare-styleable name="BobbleTextView">
        <attr name="minTextSize" format="dimension"/>
        <attr name="maxTextSize" format="dimension"/>
    </declare-styleable>


</resources>
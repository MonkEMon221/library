    <!--        <attr name="imageColor" format="color"/>-->
    <!--    </declare-styleable>-->

    <declare-styleable name="BobbleFab">
        <attr name="backgroundTint" />
        <attr name="android:backgroundTint" />
        <attr name="android:src" format="reference|color" />
        <attr name="maxImageSize" format="dimension" />
        <attr name="fabCustomSize" format="dimension" />
        <attr name="customTheme" />
    </declare-styleable>

    <declare-styleable name="BobbleCardView">
        <attr name="cardCornerRadius" format="dimension" />
        <attr name="cardBackgroundColor" format="color" />
        <attr name="customTheme" />
    </declare-styleable>

    <declare-styleable name="BobbleEditText">
        <attr name="corner_radius" />
        <attr name="textBoxColor" format="color" />
        <attr name="borderColor" />
        <attr name="android:textColor" />
        <attr name="borderWidth" />
        <attr name="customTheme" />
    </declare-styleable>

    <declare-styleable name="BobbleImageButton">
        <attr name="customTheme" />
        <attr name="android:backgroundTint" />
    </declare-styleable>

    <declare-styleable name="BobbleTabLayout">
        <attr name="customTheme" />
        <attr name="tabTextColor" format="color" />
        <attr name="tabSelectedTextColor" format="color" />
        <attr name="tabIndicatorColor" format="color" />
        <attr name="boldText" format="boolean" />
        <attr name="android:textSize" format="dimension" />
        <attr name="selectedTabBoldText" format="boolean" />
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="BobbleImage">
        <attr name="backgroundColor" format="color|reference" />
        <attr name="android:paddingTop" format="dimension" />
        <attr name="android:paddingBottom" format="dimension" />
        <attr name="android:paddingLeft" format="dimension" />
        <attr name="android:paddingRight" format="dimension" />
        <attr name="android:padding" format="dimension" />
        <attr name="customTheme" />

        <attr name="backgroundColor1" format="reference|color" />
        <attr name="imageColor1" format="color" />
        <attr name="enableColorFilter1" format="boolean" />
        <attr name="src1" format="color|reference" />
        <attr name="marginImage1" format="dimension" />
        <attr name="marginTopImage1" format="dimension" />
        <attr name="marginBottomImage1" format="dimension" />
        <attr name="marginLeftImage1" format="dimension" />
        <attr name="marginRightImage1" format="dimension" />
        <attr name="translationZImage1" format="dimension" />
        <attr name="gravityImage1" format="string" />

        <attr name="backgroundColor2" format="reference|color" />
        <attr name="imageColor2" format="color" />
        <attr name="enableColorFilter2" format="boolean" />
        <attr name="src2" format="color|reference" />
        <attr name="marginImage2" format="dimension" />
        <attr name="marginTopImage2" format="dimension" />
        <attr name="marginBottomImage2" format="dimension" />
        <attr name="marginLeftImage2" format="dimension" />
        <attr name="marginRightImage2" format="dimension" />
        <attr name="translationZImage2" format="dimension" />
        <attr name="gravityImage2" format="string"/>
